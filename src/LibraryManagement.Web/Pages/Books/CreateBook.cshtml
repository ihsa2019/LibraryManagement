@page
@using LibraryManagement.Localization
@using LibraryManagement.Web.Pages.Books
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model LibraryManagement.Web.Pages.Books.CreateBookModalModel
@inject IStringLocalizer<LibraryManagementResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Book" asp-page="/Books/CreateBook">
    <abp-modal>
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@AbpModalButtons.Cancel|AbpModalButtons.Save"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
